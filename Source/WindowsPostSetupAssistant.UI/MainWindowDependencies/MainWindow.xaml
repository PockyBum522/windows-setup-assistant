<Window x:Class="WindowsPostSetupAssistant.UI.MainWindowDependencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel>
            
            <!-- Cards go here -->
            
        </StackPanel>
        
        <UniformGrid Grid.Row="1" Grid.Column="0" Margin="10" Rows="1" Columns="3">
            <Button Content="Save" Margin="5"></Button>
            <Button Content="Load" Margin="5"></Button>
            <Button Content="Execute" Margin="5"></Button>
        </UniformGrid>
    </Grid>
</Window>
