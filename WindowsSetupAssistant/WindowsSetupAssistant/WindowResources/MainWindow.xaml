                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
        
        <!-- Bottom Buttons -->
        <DockPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="5">

            <Button Content="Select for Personal PCs" 
                    Click="SelectAllForPersonalPCs_OnClick" 
                    Padding="10"
                    Margin="5"/>

            <Button Content="Select for OSC Exhibit PCs" 
                    Click="SelectAllForOscExhibitPCs_OnClick" 
                    Padding="10"
                    Margin="5"/>

            <Button Content="Select Commonly Used" 
                    Click="SelectAllCommon_OnClick" 
                    Padding="10"
                    Margin="5"/>

            <Button Content="Clear" 
                    Click="ClearAll_OnClick" 
                    Padding="10"
                    Margin="5"/>

            <Button Content="Select All" 
                    Click="SelectAll_OnClick" 
                    Padding="10"
                    Margin="5"/>

            <Button Content="Start Execution"
                    DockPanel.Dock="Right"
                    Width="200"
                    Click="StartExecution_OnClick" 
                    Padding="10" />
        </DockPanel>
    </Grid>
</Window>
