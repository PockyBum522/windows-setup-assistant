                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallWinScp }" 
                                  Content="WinScp"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallPutty }" 
                                  Content="Putty"  
