                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallWinMerge }" 
                                  Content="WinMerge"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallKrita }" 
                                  Content="Krita"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallBlender }" 
                                  Content="Blender"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallPaintDotNet }" 
                                  Content="Paint.net"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallGimp }" 
                                  Content="GIMP"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallIrfanView }" 
                                  Content="IrfanView"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallInkscape }" 
                                  Content="Inkscape"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallGreenShot }" 
                                  Content="GreenShot"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallFoxitReader }" 
                                  Content="FoxitReader"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallLibreOffice }" 
                                  Content="LibreOffice"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallCdBurnerXp }" 
                                  Content="CDBurnerXP"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallRevo }" 
                                  Content="Revo Uninstaller"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallWinDirStat }" 
                                  Content="WinDirStat"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallQBitTorrent }" 
                                  Content="QBitTorrent"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallZoom }" 
                                  Content="Zoom"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallSteam }" 
                                  Content="Steam"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallDropBox }" 
                                  Content="DropBox"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallObsidian }" 
                                  Content="Obsidian"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallPushBullet }" 
                                  Content="PushBullet"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallBitWarden }" 
                                  Content="BitWarden"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallPowerToys }" 
                                  Content="PowerToys"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
                                  IsChecked="{Binding IsCheckedInstallJetbrainsToolbox }" 
                                  Content="JetbrainsToolbox"  
                                  Margin="2,0,0,0"  />
                        
                        <CheckBox DockPanel.Dock="Top"
